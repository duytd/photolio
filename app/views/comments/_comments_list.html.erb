<%= will_paginate(@comments) %>
<ul>
  <% @comments.each do |p| %>
    <li>
      <%#=flash[:alert]%>
      <div class='comment_sub'> <%= p.subject %></div>
      <% if signed_in? && p.user_id == current_user.id %>
      <div class='comment_link'>
        <%= link_to 'Edit', edit_content_comment_path(@content, p), class: "btn btn-small" %>  /
        <%= link_to 'Delete', content_comment_path(@content, p), class: "btn btn-small", method: :delete, data: { confirm: "comment Delete. Are you sure?" }  %>
      </div>
      <% end %>
      <div class='comment_con'><%=p.com_content%></div>
    </li>
  <% end %>
</ul>
<%= will_paginate(@comments) %>
